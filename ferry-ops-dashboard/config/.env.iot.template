# BC Ferries IoT Bridge Configuration Template
# Copy this file to .env.iot and update with your actual values

# ==========================================
# AWS Configuration
# ==========================================
AWS_REGION=us-west-2
AWS_IOT_ENDPOINT=your-iot-endpoint.iot.us-west-2.amazonaws.com
DEVICE_ID=bc-ferries-bridge
CERTIFICATE_PATH=./certificates

# ==========================================
# HiveMQ Cloud Configuration
# ==========================================
# Update these with your HiveMQ Cloud cluster details
HIVEMQ_HOST=your-cluster-id.hivemq.cloud
HIVEMQ_PORT=8883
HIVEMQ_USERNAME=your-hivemq-username
HIVEMQ_PASSWORD=your-hivemq-password

# ==========================================
# AWS Services Configuration
# ==========================================
LOG_GROUP_NAME=/bc-ferries/maritime-telemetry
SNS_TOPIC_ARN=arn:aws:sns:us-west-2:YOUR_ACCOUNT_ID:bc-ferries-alerts
DYNAMODB_TABLE=bc-ferries-telemetry

# ==========================================
# IoT Bridge Service Configuration
# ==========================================
IOT_BRIDGE_PORT=8082
NODE_ENV=production

# ==========================================
# Message Processing Configuration
# ==========================================
# Alert thresholds (optional overrides)
ENGINE_TEMP_WARNING=95
ENGINE_TEMP_CRITICAL=105
ENGINE_RPM_WARNING=1800
ENGINE_RPM_CRITICAL=2000
BATTERY_SOC_WARNING=25
BATTERY_SOC_CRITICAL=15
BILGE_LEVEL_WARNING=40
BILGE_LEVEL_CRITICAL=60

# ==========================================
# Monitoring and Logging
# ==========================================
LOG_LEVEL=info
ENABLE_DETAILED_LOGGING=true
METRICS_COLLECTION_INTERVAL=300

# ==========================================
# Ferry Control System Integration
# ==========================================
FERRY_CONTROL_API=http://ferry.linknote.com
FERRY_CONTROL_WS=ws://ferry.linknote.com

# ==========================================
# Security Configuration
# ==========================================
# TLS/SSL settings for secure connections
TLS_CERT_VALIDATION=true
ENABLE_MESSAGE_ENCRYPTION=false

# ==========================================
# Performance Tuning
# ==========================================
MAX_MESSAGE_QUEUE_SIZE=1000
RECONNECT_MAX_ATTEMPTS=5
RECONNECT_BACKOFF_MS=5000
MESSAGE_BATCH_SIZE=10
PROCESSING_TIMEOUT_MS=30000

# ==========================================
# Development/Testing
# ==========================================
ENABLE_TEST_MODE=false
SIMULATE_VESSEL_DATA=false
TEST_VESSEL_COUNT=3