# BC Ferries Operations Dashboard Environment Configuration
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=8081
HOST=0.0.0.0

# MQTT Broker Configuration
MQTT_BROKER_URL=wss://bc-ferries-mqtt-broker.fly.dev:443
MQTT_CLIENT_ID=ops-dashboard
MQTT_USERNAME=
MQTT_PASSWORD=

# Database Configuration
DB_PATH=./data/ferry_telemetry.db

# Data Collection Settings
DATA_COLLECTION_INTERVAL=5000  # milliseconds
DATA_AGGREGATION_5MIN_ENABLED=true
DATA_AGGREGATION_HOURLY_ENABLED=true
DATA_RETENTION_DAYS=1

# Security Settings
CORS_ORIGIN=*
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_HISTORICAL_DATA=true
ENABLE_CSV_EXPORT=true
ENABLE_REAL_TIME_CHARTS=true

# External Services (if applicable)
WEATHER_API_KEY=
WEATHER_API_URL=

# Performance Settings
MAX_WEBSOCKET_CONNECTIONS=100
WEBSOCKET_PING_INTERVAL=30000  # milliseconds

# Alert Settings
CRITICAL_ALERT_SOUND_ENABLED=true
AUTO_ACKNOWLEDGE_TIMEOUT=30000  # milliseconds