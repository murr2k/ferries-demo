# BC Ferries Grafana Cloud Configuration Template
# Copy to .env and fill in your actual values

# Grafana Cloud Configuration
GRAFANA_API_TOKEN=your_grafana_cloud_api_token_here
GRAFANA_STACK_NAME=bcferriesdemo
GRAFANA_ORG_NAME=bc-ferries-maritime-ops
GRAFANA_REGION=us-east-1

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-west-2

# AWS IoT Core
IOT_ENDPOINT=your_iot_endpoint.iot.us-west-2.amazonaws.com
IOT_DEVICE_PASSWORD=your_iot_device_password
IOT_CLIENT_CERT=path_to_client_cert.crt
IOT_CLIENT_KEY=path_to_client_key.key
IOT_CA_CERT=path_to_ca_cert.pem

# HiveMQ Cloud (Optional)
HIVEMQ_BROKER=your_cluster.s2.eu.hivemq.cloud
HIVEMQ_USERNAME=ferry-monitoring
HIVEMQ_PASSWORD=your_hivemq_password

# AWS TimeStream
TIMESTREAM_DATABASE=FerryTelemetryDB
TIMESTREAM_TABLE=VesselTelemetry

# InfluxDB (Alternative)
INFLUXDB_URL=http://influxdb.ferry.linknote.com:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=bc-ferries
INFLUXDB_BUCKET=vessel-data

# Alert Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_integration_key

# Demo Configuration
DEMO_DURATION=1week
ESTIMATED_COST=75USD
FERRY_CONTROL_URL=ferry.linknote.com
FERRY_MONITORING_URL=ops.linknote.com

# Optional: Prometheus/Grafana
PROMETHEUS_URL=http://ferry.linknote.com:9090
GRAFANA_LOCAL_URL=http://ferry.linknote.com:3000
LOKI_URL=http://loki.ferry.linknote.com:3100